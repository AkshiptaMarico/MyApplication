                android:fromDegrees="135"
                android:pivotX="100%"
                android:pivotY="60%"
                android:toDegrees="45">
                <shape android:shape="rectangle">
                    <stroke
                        android:width="10dp"
                        android:color="#898989" />
                    <solid android:color="#898989" />
                </shape>
            </rotate>
        </rotate>
